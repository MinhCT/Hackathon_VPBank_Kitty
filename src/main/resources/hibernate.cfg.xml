<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/kitty_bank</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <mapping class="com.hackathon.kitty.gamification.models.Event"/>
        <mapping class="com.hackathon.kitty.gamification.models.Food"/>
        <mapping class="com.hackathon.kitty.gamification.models.Kitty"/>
        <mapping class="com.hackathon.kitty.gamification.models.KittyType"/>
        <mapping class="com.hackathon.kitty.gamification.models.User"/>
        <mapping class="com.hackathon.kitty.gamification.models.UserCompleteEvent"/>
        <property name="connection.username">root</property>
        <property name="connection.password"></property>

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>